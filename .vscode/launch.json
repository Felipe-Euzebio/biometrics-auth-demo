    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug (Development)",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "FastAPI Debug (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "run"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}